---
import CArr from '../components/CArr.astro';
const { index, info } = Astro.props;
---

<div class="bag-slider">
  <div class="bag-slider__arr">
    <div class="arr-prev">
      <svg width="41.401" height="40.353" viewBox="0 0 41.401 40.353">
        <path d="M23.8,2.7,21.747.651a2.209,2.209,0,0,0-3.132,0L.651,18.605a2.209,2.209,0,0,0,0,3.132L18.615,39.7a2.209,2.209,0,0,0,3.132,0L23.8,37.65a2.22,2.22,0,0,0-.037-3.169L12.627,23.872H39.184A2.212,2.212,0,0,0,41.4,21.655V18.7a2.212,2.212,0,0,0-2.218-2.218H12.627L23.762,5.872A2.2,2.2,0,0,0,23.8,2.7Z" transform="translate(0 0)"/>
      </svg>
    </div>
    <div class="arr-next">
      <svg width="41.401" height="40.353" viewBox="0 0 41.401 40.353">
        <path d="M23.8,37.65,21.747,39.7a2.209,2.209,0,0,1-3.132,0L.651,21.747a2.209,2.209,0,0,1,0-3.132L18.615.651a2.209,2.209,0,0,1,3.132,0L23.8,2.7a2.22,2.22,0,0,1-.037,3.169L12.627,16.48H39.184A2.212,2.212,0,0,1,41.4,18.7v2.957a2.212,2.212,0,0,1-2.218,2.218H12.627L23.762,34.48A2.2,2.2,0,0,1,23.8,37.65Z" transform="translate(41.401 40.353) rotate(180)"/>
      </svg>      
    </div>
  </div>
  <div class="bag-slider__slider">
    <slot />
  </div>
</div>

<style lang="scss" is:global>
  .bag-slider{
    inline-size: 100svi;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;

    .arr-prev{
      inline-size: vw(18);
      position: absolute;
      inset: vw(180) auto auto vw(8);
      @include lg{
        inline-size: 40px;
        inset: 260px auto auto 50%;
        transform: translateX(-50%);
        margin-inline-start: -280px;
        z-index: 10;
        transition: .2s;
        &:hover{
          cursor: pointer;
          opacity: .5;;
        }
      }

      svg{
        inline-size: 100%;
        height: auto;
        display: block;
      }
    }

    .arr-next{
      inline-size: vw(18);
      position: absolute;
      inset: vw(180) vw(8) auto auto;
      @include lg{
        inline-size: 40px;
        inset: 260px 50% auto auto;
        transform: translateX(50%);
        margin-inline-end: -280px;
        z-index: 10;
        transition: .2s;
        &:hover{
          cursor: pointer;
          opacity: .5;;
        }
      }
      svg{
        inline-size: 100%;
        height: auto;
        display: block;
      }
    }

    &__slider{
      position: relative;
      inline-size: vw(300);
      @include lg{
        inline-size: 460px;
      }
    }
}
</style>