---
const { index, imgPath, desc } = Astro.props;
---

<div class="slide-it" data-it={index+1}>
  <div class="slide-it__img">
    <img src={imgPath} alt="" />
  </div>
  <p class="slide-it__desc" set:html={desc} />
</div>

<style lang="scss" is:global>
  .slide-it{
    position: absolute;
    inset: 0 auto auto 0;
    transition: .6s;
    animation: myfadeIn 1.0s;

    &:nth-child(1){
      position: relative;
      z-index: 5;
      &:is(.is-nextAni *){
        // inset: vw(10) auto auto vw(-10);
        z-index: 5;
        opacity: 0;
      }
    }

    &:nth-child(2){
      z-index: 4;
    }

    &:nth-child(3){
      z-index: 3;
      &:is(.is-prevAni *){
        opacity: 0;
      }
    }


    &__img{
      position: relative;
      transition: 1.0s;

      &:is(.slide-it:nth-child(1) *){
        transform: rotateZ(0);
        z-index: 5;
        &:is(.is-nextAni *){
          transform: rotateZ(5deg);
        }
        &:is(.is-prevAni *){
          transform: rotateZ(-5deg) translateZ(10px);
        }
      }


      &:is(.slide-it:nth-child(2) *){
        transform: rotateZ(-5deg);
        z-index: 4;
        &:is(.is-nextAni *){
          transform: rotateZ(0);
        }
        &:is(.is-prevAni *){
          transform: rotateZ(5deg) translateZ(10px);
        }
      }

      &:is(.slide-it:nth-child(3) *){
        transform: rotateZ(5deg);
        z-index: 3;
        &:is(.is-nextAni *){
          transform: rotateZ(-5deg);
        }
        &:is(.is-prevAni *){
          transform: rotateZ(0) translateZ(20px);
        }
      }

    }

    &__desc{
      position: relative;
      margin-block-start: vw(30);
      font-size: vw(12);
      line-height: 2.0;
      min-block-size: calc(2 * 3em);
      background: #F6F5F4;
      opacity: 0;
      @include lg{
        margin-block-start: 60px;
        min-block-size: calc(2 * 2em);
        font-size: 16px;
        text-align: center;
      }

      &:is(.slide-it:nth-child(1) *){
        opacity: 1;
      }
    }
  }

@keyframes myfadeIn {
  from{
    opacity: 0;
  }
  to{
    opacity: 1;
  }
}
</style>